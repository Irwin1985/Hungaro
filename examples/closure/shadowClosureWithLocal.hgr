def pBlockA
    let sFoo = "closure"
    def pF
        def pInnerF
            pPrintLn(sFoo) # closure
            let sFoo = "shadow"
            pPrintLn(sFoo) # shadow
        end
        pInnerF()
        pPrintLn(sFoo) # closure
    end
    pF()
end

pBlockA()

# final assert to automatically check if all tests passed
pAssert(true, "This test should always pass")