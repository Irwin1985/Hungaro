# local constants are all in uppercase (global ones starts with `_`)
let PI = 3.14159265
let nRadius = 10

for nI = 1 to nRadius
    let nWidth = nRadius * sin(180 / nRadius * nI * PI / 180)
    print(space(nRadius - nWidth))
    for nJ = 1 to nWidth * 2
        print("*")
    end
    println("")
end