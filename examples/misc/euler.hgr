let nVo = 0.5, nK1 = 0.1, nK2 = 0.14

def fOde(paX, paDf)
    paDf[0] = nVo - nK1 * paX[0]
    paDf[1] = nK1 * paX[0] - nK2 * paX[1]
    return paDf
end

let nHstep = 0.1, aX = [0, 0], aDf = [0, 0], nT = 0

for nI = 0 to 80
    fOde(aX, aDf)
    aX[0] = aX[0] + nHstep * aDf[0]
    aX[1] = aX[1] + nHstep * aDf[1]
    nT = nT + nHstep
    pPrintLn(nT, aX[0], aX[1])
end