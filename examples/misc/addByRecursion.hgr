def fAddNumbers(pnNumber)
    if pnNumber != 0
        return pnNumber + fAddNumbers(pnNumber - 1)
    else
        return pnNumber    
    end
end

let nNumber = fVal(fReadLn("Enter a number: "))
pPrintLn("Sum of numbers from 1 to " & nNumber & " is " & fAddNumbers(nNumber))

