def fAddNumbers(pnNumber)
    if pnNumber != 0
        return pnNumber + fAddNumbers(pnNumber - 1)
    else
        return pnNumber    
    end
end

let nNumber = val(readln("Enter a number: "))
println("Sum of numbers from 1 to " & nNumber & " is " & fAddNumbers(nNumber))