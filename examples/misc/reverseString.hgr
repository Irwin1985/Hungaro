declare lsString = "ABCDEFG",
        lsReverse = "",
        lnLen = lsString.len()

for lnI = lnLen-1 to 0 step -1
    lsReverse += lsString.charAt(lnI)
end

println("Original String: " & lsString)
println("Reverse String: " & lsReverse)