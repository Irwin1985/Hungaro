declare lnRows = 7

for lnI = 1 to lnRows * 2    
    for lnJ = 1 to lnRows * 2
        if (lnJ == lnRows or lnI == lnRows)
            print("*")
        else
            print(" ")
        end
    end
    println(" ")
end