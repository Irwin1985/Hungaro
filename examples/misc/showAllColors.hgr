let aColors = [        
    "black",
    "red",
    "green",
    "yellow",
    "blue",
    "purple",
    "cyan",
    "white",
]

for each vColor in aColors
    pSetConsoleForeColor(vColor)
    pPrintLn("This is a text in " & vColor & " color")
end
pSetConsoleForeColor("reset")
pPrintLn(" ")