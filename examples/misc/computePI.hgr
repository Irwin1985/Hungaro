let PI = 3.14159265

# Nilakantha series to compute PI
# https://en.wikipedia.org/wiki/Nilakantha_series

let nAns = 3.0, nJ = 2.0

for nI = 1 to 20
    if nI%2 == 1
        nAns = nAns + 4.0/(nJ*(nJ+1)*(nJ+2))
    else
        nAns = nAns - 4.0/(nJ*(nJ+1)*(nJ+2))
    end
    nJ += 2
    println(nI, space(2), nAns)
end