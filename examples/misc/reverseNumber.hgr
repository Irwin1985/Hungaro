let nN = fVal(fReadLn("Enter a number: "))
let nRev = 0

while nN != 0
    let nRemainder = nN % 10
    nRev = nRev * 10 + nRemainder
    nN = fInt(nN / 10)
end

pPrintLn("The reverse number is: " & nRev)