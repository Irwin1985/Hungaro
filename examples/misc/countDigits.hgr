let nNumber = fVal(fReadLn("Enter a number: "))
let nCount = 0

while nNumber != 0
    nNumber = fInt(nNumber / 10)
    nCount += 1    
end

pPrint("The number of digits is: " & nCount)

# final assert to automatically check if all tests passed
pAssert(true, "This test should always pass")