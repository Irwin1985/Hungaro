let nNumber = val(readln("Enter the number of elements you wish to find the greatest element of: "))

println("Enter " & nNumber & " numbers: ")

let nMax = val(readln(""))

for nIndex = 2 to nNumber
    println("Element " & nIndex & ": ")
    let nNumber = val(readln(""))
    if nNumber > nMax
        nMax = nNumber # update the maximum
    end
end

println("The maximum number is: " & nMax)