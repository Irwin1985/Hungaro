end
pPrintLn()

pPrintLn("=========Code and Decode a secret message=========")
let sX = "abcdefghijklmnopqrstuvwxyz"
let sCode = "yzabcdefghijklmnopqrstuvwx"

# encode
let sSecret = ""
let sWord = "hello"

for nK = 0 to 4
    for nI = 0 to 25
        if sWord.charAt(nK) == sX.charAt(nI)
            sSecret = sSecret & sCode.charAt(nI)
        end
    end
end
pPrintLn("Secret: " & sSecret)

# decode
let sDecoded = ""

for nK = 0 to 4
    for nI = 0 to 25
        if sSecret.charAt(nK) == sCode.charAt(nI)
            sDecoded = sDecoded & sX.charAt(nI)
        end
    end
end
pPrintLn("Decoded: " & sDecoded)