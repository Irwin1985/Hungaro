def cFoo
    pInit(psArg)
        println("cFoo.pInit(\'" & psArg & "\')")
        @sField = "init"
    end
end

let oFoo = new cFoo("one") # prints "cFoo.pInit('one')"
oFoo.sField = "field"

let oFoo2 = oFoo.pInit("two") # prints "lcFoo.pInit('two')"
println(oFoo2)

# make sure pInit() doesn't create a fresh instance
println(oFoo.sField) # prints "init"