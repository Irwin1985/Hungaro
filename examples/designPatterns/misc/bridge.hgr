# Devices
def cDevice
    -fIsEnabled()
    -pEnable()
    -pDisable()    
    -fGetVolume()
    -pSetVolume(pnPercent)        
    -fGetChannel()    
    -pSetChannel(pnChannel)
    -pPrintStatus()
end

# Radio
def cRadio as cDevice
    bOn = false
    nVolume = 30
    nChannel = 1

    fIsEnabled
        return @bOn
    end
    
    pEnable
        @bOn = true    
    end
    
    pDisable
        @bOn = false
    end    
    
    fGetVolume
        return @nVolume
    end    
    
    pSetVolume(pnPercent)
        if @nVolume > 100
            @nVolume = 100
        end
        if @nVolume < 0
            @nVolume = 0
        else
            @nVolume = pnPercent
        end
    end
        
    fGetChannel
        return @nChannel
    end
    
    
    pSetChannel(pnChannel)
        @nChannel = pnChannel
    end    

    pPrintStatus
        println("------------------------------------")
        println("| I\'m radio.")
        println("| I\'m " & iif(@bOn, "enabled", "disabled"))
        println("| Current volume is " & @nVolume & "%")
        println("| Current channel is " & @nChannel)
        println("------------------------------------\n")
    end
end

