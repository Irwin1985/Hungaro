# Devices
def cDevice
    -fIsEnabled()
    -pEnable()
    -pDisable()    
    -fGetVolume()
    -pSetVolume(pnPercent)        
    -fGetChannel()    
    -pSetChannel(pnChannel)
    -pPrintStatus()
end

# Radio
def cRadio as cDevice
    bOn = false
    nVolume = 30
    nChannel = 1

    fIsEnabled
        return poThis.bOn
    end
    
    pEnable
        poThis.bOn = true    
    end
    
    pDisable
        poThis.bOn = false
    end    
    
    fGetVolume
        return poThis.nVolume
    end    
    
    pSetVolume(pnPercent)
        if poThis.nVolume > 100
            poThis.nVolume = 100
        end
        if poThis.nVolume < 0
            poThis.nVolume = 0
        else
            poThis.nVolume = pnPercent
        end
    end
        
    fGetChannel
        return poThis.nChannel
    end
    
    
    pSetChannel(pnChannel)
        poThis.nChannel = pnChannel
    end    

    pPrintStatus
        println("------------------------------------")
        println("| I\'m radio.")
        println("| I\'m " & iif(poThis.bOn, "enabled", "disabled"))
        println("| Current volume is " & poThis.nVolume & "%")
        println("| Current channel is " & poThis.nChannel)
        println("------------------------------------\n")
    end
end

