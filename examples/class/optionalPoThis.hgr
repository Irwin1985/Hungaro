def cAnimal
    pInit(psName, psType)
        @sName = psName
        @sType = psType
        @pWhatIs()
    end

    pWhatIs
        pPrintLn(@sName & " is a " & @sType)
    end
end

# Create an instance of the class
let oDog = new cAnimal("Fido", "dog")
oDog.pWhatIs()  # here is mandatory to use `object.method()` syntax