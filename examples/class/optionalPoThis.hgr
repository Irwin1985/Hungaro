def cAnimal
    pInit(psName, psType)
        poThis.sName = psName
        poThis.sType = psType
        poThis.pWhatIs()
    end

    pWhatIs
        println(poThis.sName & " is a " & poThis.sType)
    end
end

# Create an instance of the class
let oDog = new cAnimal("Fido", "dog")
oDog.pWhatIs()  # here is mandatory to use `object.method()` syntax