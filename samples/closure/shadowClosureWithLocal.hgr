declare lpBlockA
    declare lsFoo = "closure"
    declare lpF
        declare lpInnerF
            println(lsFoo) # closure
            declare lsFoo = "shadow"
            println(lsFoo) # shadow
        end
        lpInnerF()
        println(lsFoo) # closure
    end
    lpF()
end

lpBlockA()