declare lnNumber = val(readln("Enter the number of elements you wish to find the greatest element of: "))

println("Enter " & lnNumber & " numbers: ")

declare lnMax = val(readln(""))

for lnIndex = 2 to lnNumber
    println("Element " & lnIndex & ": ")
    declare lnNumber = val(readln(""))
    if lnNumber > lnMax
        lnMax = lnNumber # update the maximum
    end
end

println("The maximum number is: " & lnMax)