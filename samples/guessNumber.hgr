declare lnNumber = 9, lnGuess = 0

println("Guess a number between 1 and 10")

for lnI = 1 to 10
    lnGuess = val(input("Guess: "))
    if lnGuess == lnNumber
        println("You guessed it!")
        exit
    else
        if lnGuess < lnNumber
            println("Too low")
        else
            println("Too high")
        end
    end
end