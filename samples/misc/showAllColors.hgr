declare laColors = [        
    "black",
    "red",
    "green",
    "yellow",
    "blue",
    "purple",
    "cyan",
    "white",
]

for each lvColor in laColors
    setConsoleForeColor(lvColor)
    println("This is a text in " & lvColor & " color")
end
setConsoleForeColor("reset")
println(" ")