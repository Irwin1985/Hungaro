declare lnN = val(readln("Enter a number: "))
declare lnRev = 0

while lnN != 0
    declare lnRemainder = lnN % 10
    lnRev = lnRev * 10 + lnRemainder
    lnN = int(lnN / 10)
end

println("The reverse number is: " & lnRev)