declare PI = 3.14159265

# Nilakantha series to compute PI
# https://en.wikipedia.org/wiki/Nilakantha_series

declare lnAns = 3.0, lnJ = 2.0

for lnI = 1 to 20
    if lnI%2 == 1
        lnAns = lnAns + 4.0/(lnJ*(lnJ+1)*(lnJ+2))
    else
        lnAns = lnAns - 4.0/(lnJ*(lnJ+1)*(lnJ+2))
    end
    lnJ += 2
    println(lnI, space(2), lnAns)
end