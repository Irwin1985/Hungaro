declare lfAdd(pnX, pnY)
    return pnX + pnY
end

declare lfSub(pnX, pnY)
    return pnX - pnY
end

declare lfMul(pnX, pnY)
    return pnX * pnY
end

declare lfDiv(pnX, pnY)
    return pnX / pnY
end

# create a map with all arithmetic functions
declare lmArithmeticFunctions = {
    "add": lfAdd,
    "sub": lfSub,
    "mul": lfMul,
    "div": lfDiv,
}

# call any function from the map
declare lnResult = lmArithmeticFunctions["add"](2, 3) # 5
print lnResult # 5